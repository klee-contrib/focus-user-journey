{
    "compilerOptions": {
        // Général
        "lib": ["es2020", "dom"],
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2020",
        "declarationDir": "./lib",

        // Options obligatoires
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strict": true,
        "useDefineForClassFields": true,

        // Options additionnelles
        "importHelpers": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        // Spécifique librairie
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "stripInternal": true,
        "noEmitOnError": true
    }
}
