{
    "compilerOptions": {
        // Général
        "lib": ["es2018", "dom"],
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",

        // Options obligatoires
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "strict": true,

        // Options additionnelles
        "importHelpers": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        // Spécifique librairie
        "declarationDir": "./lib",
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "stripInternal": true
    }
}
